#!/usr/bin/env sh

#echo "Installing oh-my-zsh"
#sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

echo "Installing aliases"
ln -svf $HOME/code/dotfiles/.aliases  ~/.aliases
source $HOME/.aliases

echo "Installing zshrc"
ln -svf $HOME/code/dotfiles/.zshrc  ~/.zshrc
source $HOME/.zshrc

echo "Installing vimrc"
ln -svf $HOME/code/dotfiles/.vimrc  ~/.vimrc
source $HOME/.vimrc

echo "Configuring git"
ln -svf $HOME/code/dotfiles/.gitconfig ~/.gitconfig
source $HOME/.gitconfig
